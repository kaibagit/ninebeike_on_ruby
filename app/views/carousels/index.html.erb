<h1>首页轮播</h1>

<table>
  <thead>
    <tr>
      <th>图片</th>
      <th>链接</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carousels.each do |carousel| %>
      <tr>
        <td><a href="<%= carousel.image %>" target="_blank"><image src="<%= carousel.image %>" style="max-width: 100px;"/></a></td>
        <td><a href="<%= carousel.ulr %>" target="_blank"><%= carousel.ulr %></a></td>
        <td><%= link_to (t 'Show'), carousel %></td>
        <td><%= link_to (t 'Edit'), edit_carousel_path(carousel) %></td>
        <td><%= link_to (t 'Destroy'), carousel, method: :delete, data: { confirm: '确定删除吗' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建首页轮播', new_carousel_path %>
