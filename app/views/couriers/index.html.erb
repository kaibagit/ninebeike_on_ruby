<h1>上门人员列表</h1>

<table>
  <thead>
    <tr>
      <th>用户名</th>
      <th>姓名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @couriers.each do |courier| %>
      <tr>
        <td><%= courier.username %></td>
        <td><%= courier.name %></td>
        <td><%= link_to (t 'Show'), courier %></td>
        <td><%= link_to (t 'Edit'), edit_courier_path(courier) %></td>
        <td><%= link_to (t 'Destroy'), courier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新增上门人员', new_courier_path %>
