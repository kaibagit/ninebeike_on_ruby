<h1>首页轮播</h1>

<table>
  <thead>
    <tr>
      <th>图片</th>
      <th>链接</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carousels.each do |carousel| %>
      <tr>
        <td><%= carousel.image %></td>
        <td><%= carousel.ulr %></td>
        <td><%= link_to (t 'Show'), carousel %></td>
        <td><%= link_to (t 'Edit'), edit_carousel_path(carousel) %></td>
        <td><%= link_to (t 'Destroy'), carousel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建首页轮播', new_carousel_path %>
